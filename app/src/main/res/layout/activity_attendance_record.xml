                    android:layout_weight="0.5"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtviewjan"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="Working Days and Absent days"/>
            </LinearLayout>

