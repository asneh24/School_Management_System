<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Head Name"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/installment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Installment"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/latefee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Late Fee"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/payableamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payable Amount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/paidamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paid Amount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/dueamt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Amount"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/duedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/paiddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paid Date"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>