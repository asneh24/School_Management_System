<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutt"
    android:background="@drawable/background3">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/school_name"
        android:textAlignment="center"
        android:textColor="#0013FF"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/subheading"
        android:layout_below="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/school_subheading"
        android:textAlignment="center"
        android:textColor="#FF5D00"
        android:textSize="14dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT US"
        android:layout_below="@+id/subheading"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MISSION"
        android:layout_below="@+id/aboutus"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/bookosbi"
        android:textSize="20dp"
        android:textColor="#0017FF"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textmission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mission"
        android:layout_marginHorizontal="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/bookosi"
        android:textSize="14dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/vision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VISION"
        android:layout_below="@+id/textmission"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/bookosbi"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0017FF"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textvision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vision"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/bookosi"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
</ScrollView>